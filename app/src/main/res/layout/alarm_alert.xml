<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:id="@+id/tableRow0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white"
                android:textSize="40sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="2"
            android:background="@drawable/divider"
            android:textAlignment="viewEnd">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="12dp"
                android:fontFamily="Roboto-Thin.ttf"
                android:hint="Enter your reply ..."
                android:maxLength="20"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white"
                android:textColorHint="#9bffffff"
                android:textSize="23sp" />


        </RelativeLayout>


        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/Button1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@null"
                android:fontFamily="Roboto-Thin.ttf"
                android:tag="1"
                android:text="@string/_1"
                android:textColor="@color/white"
                android:textSize="45sp" />

            <Button
                android:id="@+id/Button2"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@null"
                android:fontFamily="Roboto-Thin.ttf"
                android:tag="2"
                android:text="@string/_2"
                android:textColor="@color/white"
                android:textSize="45sp" />

            <Button
                android:id="@+id/Button3"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@null"
                android:fontFamily="Roboto-Thin.ttf"
                android:tag="3"
                android:text="@string/_3"
                android:textColor="@color/white"
                android:textSize="45sp" />

        </TableRow>

        <TableRow
            android:id="@+id/TableRow3"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/Button4"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@null"
                android:fontFamily="Roboto-Thin.ttf"
                android:tag="4"
                android:text="@string/_4"
                android:textColor="@color/white"
                android:textSize="45sp" />

            <Button
                android:id="@+id/Button5"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@null"
                android:fontFamily="Roboto-Thin.ttf"
                android:tag="5"
                android:text="@string/_5"
                android:textColor="@color/white"
                android:textSize="45sp" />

            <Button
                android:id="@+id/Button6"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@null"
                android:fontFamily="Roboto-Thin.ttf"
                android:tag="6"
                android:text="@string/_6"
                android:textColor="@color/white"
                android:textSize="45sp" />

        </TableRow>

        <TableRow
            android:id="@+id/TableRow4"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/Button7"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@null"
                android:fontFamily="bbcsf1vs.ttf"
                android:tag="7"
                android:text="@string/_7"
                android:textColor="@color/white"
                android:textSize="45sp" />

            <Button
                android:id="@+id/Button8"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@null"
                android:fontFamily="bbcsf1vs.ttf"
                android:tag="8"
                android:text="@string/_8"
                android:textColor="@color/white"
                android:textSize="45sp" />

            <Button
                android:id="@+id/Button9"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@null"
                android:fontFamily="Roboto-Thin.ttf"
                android:tag="9"
                android:text="@string/_9"
                android:textColor="@color/white"
                android:textSize="45sp" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/Button_minus"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@null"
                android:fontFamily="Roboto-Thin.ttf"
                android:tag="-"
                android:text="@string/minus_button_text"
                android:textColor="@color/white"
                android:textSize="45sp" />

            <Button
                android:id="@+id/Button0"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@null"
                android:fontFamily="Roboto-Thin.ttf"
                android:tag="0"
                android:text="@string/_0"
                android:textColor="@color/white"
                android:textSize="45sp" />

            <Button
                android:id="@+id/Button_decimal"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@null"
                android:fontFamily="Roboto-Thin.ttf"
                android:tag="."
                android:text="@string/decimal_button_text"
                android:textColor="@color/white"
                android:textSize="45sp" />
        </TableRow>
    </TableLayout>

    <ImageView
        android:id="@+id/Button_clear"
        android:layout_width="65dp"
        android:layout_height="55dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/marbackTop"
        android:clickable="true"
        android:src="@drawable/ic_back_"
        android:tag="clear"
        android:text="@string/clear_button_text" />
</RelativeLayout>